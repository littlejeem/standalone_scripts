<advancedsettings>
  <useddsfanart>true</useddsfanart>
  <cputempcommand>cputemp</cputempcommand>
  <gputempcommand>gputemp</gputempcommand>
  <samba>
    <clienttimeout>30</clienttimeout>
  </samba>
  <network>
    <disableipv6>true</disableipv6>
  </network>
  <videodatabase>
    <type>mysql</type>
    <host>LIBRARYSERVER</host>
    <port>INSERT</port>
    <user>INSERT</user>
    <pass>INSERT</pass>
  </videodatabase>
  <musicdatabase>
    <type>mysql</type>
    <host>LIBRARYSERVER</host>
    <port>INSERT</port>
    <user>INSERT</user>
    <pass>INSERT</pass>
  </musicdatabase>
  <videolibrary>
    <importwatchedstate>true</importwatchedstate>
    <importresumepoint>true</importresumepoint>
    <cleanonupdate>true</cleanonupdate>
    <recentlyaddeditems>35</recentlyaddeditems>
  </videolibrary>
  <musiclibrary>
    <cleanonupdate>true</cleanonupdate>            <!-- default set to false to prevent Kodi from removing items from the database while updating.  -->
    <recentlyaddeditems>35</recentlyaddeditems>
  </musiclibrary>
<!--
<loglevel>2</loglevel>                             <!-- Comment out for normal logging, uncomment and set to 2 for debug level -->
  <cache>
    <buffermode>4</buffermode><!--Buffer all network file types-->
    <memorysize>41943040</memorysize><!--40mb(twice default amount)-->
    <readfactor>10</readfactor> <!--Network Bandwidth usage-->
  </cache>
  <handlemounting>false</handlemounting>
</advancedsettings>
